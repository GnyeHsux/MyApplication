<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:layout_marginTop="10dp"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?android:attr/selectableItemBackground"
    app:cardCornerRadius="5dp">


    <RelativeLayout
        android:id="@+id/rl"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:background="@color/colorAccent"
        android:padding="10dp">

        <ImageView
            android:id="@+id/img_account"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/ic_action_wechat"/>

        <TextView
            android:id="@+id/tv_account_desc"
            style="@style/AccountCardTextStyle"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/img_account"
            android:gravity="center"
            android:text="现金"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/img_account"
            android:orientation="vertical"
            android:paddingLeft="10dp">

            <TextView
                style="@style/AccountCardTextStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="账户名称"/>

            <TextView
                android:id="@+id/tv_account_name"
                style="@style/AccountCardTextStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="50dp"
                android:text="微信  (jack)"/>

            <TextView
                style="@style/AccountCardTextStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="账户余额"/>

            <TextView
                android:id="@+id/tv_account_balance"
                style="@style/AccountCardTextStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="50dp"
                android:text="￥ 0.00"/>

            <TextView
                style="@style/AccountCardTextStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="今日消费"/>

            <TextView
                android:id="@+id/tv_today_spend"
                style="@style/AccountCardTextStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="50dp"
                android:text="￥ 0.00"/>
        </LinearLayout>

        <TextView
            android:id="@+id/tv_transaction"
            style="@style/AccountCardTextStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:paddingBottom="0dp"
            android:text="交易流水"/>

        <TextView
            android:id="@+id/tv_modify"
            style="@style/AccountCardTextStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:paddingBottom="0dp"
            android:text="修改账户"/>

        <TextView
            android:id="@+id/tv_transfer"
            style="@style/AccountCardTextStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:paddingBottom="0dp"
            android:text="转账"/>
    </RelativeLayout>
</android.support.v7.widget.CardView>